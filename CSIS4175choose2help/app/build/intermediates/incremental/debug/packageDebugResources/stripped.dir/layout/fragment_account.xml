<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment">

    <LinearLayout
        android:id="@+id/LinearLayoutFragment"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgViewAvatar"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:paddingTop="32dp"
            android:scaleType="fitXY"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtViewUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="@string/user_name" />

        <TextView
            android:id="@+id/txtViewUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="@string/user_email" />

        <TextView
            android:id="@+id/txtViewNavFindCharities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="64dp"
            android:text="@string/acc_nav_find_charities" />

        <TextView
            android:id="@+id/txtViewNavDonationLinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:text="@string/acc_nav_donation_links"/>

        <TextView
            android:id="@+id/txtViewNavPayItForward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:text="@string/acc_nav_pay_it_forward"/>

        <TextView
            android:id="@+id/txtViewNavDonationHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:text="@string/acc_nav_donation_history"/>

        <TextView
            android:id="@+id/txtViewLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="256dp"
            android:text="@string/acc_nav_log_out"
            android:textColor="@android:color/holo_red_light" />

    </LinearLayout>

</FrameLayout>